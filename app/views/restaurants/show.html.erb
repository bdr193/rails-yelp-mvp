
<div class="container" style="text-align:center;">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category.capitalize %></p>

  <% @reviews.each do |review| %>
  <p><strong><%= review.rating %></strong></p>
  <p><%= review.content %></p>
  <% end %>

  <%= link_to("Add review", new_restaurant_review_path(@restaurant), class: "btn btn-primary") %>
  <%= link_to("Edit", edit_restaurant_path, class: "btn btn-primary") %>
  <%= link_to("Back", restaurants_path, class: "btn btn-primary") %>
  <%= link_to "Delete", restaurant_path(@restaurant), class: "btn btn-primary",
  method: :delete,
  data: { confirm: "Are you sure?" } %>
</div>
